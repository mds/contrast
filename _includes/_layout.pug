  meta(property='og:description' content='A macOS app for quick access to WCAG color contrast ratios.')
  meta(property='og:site_name' content='Contrast for UI')

  block style
    style.
      .contrast-score h2, .contrast-score h3, .contrast-data h4 { color: #{fgColor}; }
      .contrast-score-content { background: #{bgColor};}

