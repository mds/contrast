  meta(itemprop='name' content='Contrast for UI')
  meta(itemprop='description' content='A macOS app for quick access to WCAG color contrast ratios.')
  meta(itemprop='image' content=contrastCard)

  meta(name='twitter:card' content='summary_large_image')
  meta(name='twitter:site' content='@usecontrast')
  meta(name='twitter:title' content='Contrast for UI')
  meta(name='twitter:description' content='A macOS app for quick access to WCAG color contrast ratios.')
  meta(name='twitter:creator' content='@usecontrast')
